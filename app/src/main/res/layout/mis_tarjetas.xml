<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.MisTarjetasActivity"
    android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_atras" />

        <TextView
            android:layout_width="277dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/avenir_roman"
            android:text="@string/mis_tarjetas"
            android:textAlignment="textStart"
            android:textSize="25sp" />
        <Button
            android:id="@+id/btn_agregar_tarjeta"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_mas"/>

    </LinearLayout>


    <GridView
        android:id="@+id/id_grid"
        android:layout_marginTop="5dp"
        android:verticalSpacing="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:numColumns="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_navMenu_MisTarjetas_Inicio"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="btnHome"
                app:srcCompat="@drawable/home" />

            <ImageView
                android:id="@+id/iv_navMenu_MisTarjetas_Perfil"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:onClick="btnMiPerfil"
                app:srcCompat="@drawable/user" />

            <ImageView
                android:id="@+id/iv_navMenu_MisTarjetas_mas"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/mas" />

            <ImageView
                android:id="@+id/iv_navMenu_MisTarjetas_Categorias"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/busqueda" />
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>