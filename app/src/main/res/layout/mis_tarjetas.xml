<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MisTarjetasActivity"
    android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="5sp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:onClick="btnMiPerfil"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="Mis tarjetas"/>
    </LinearLayout>

    <GridView
        android:id="@+id/id_grid"
        android:layout_marginTop="5dp"
        android:verticalSpacing="50dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:numColumns="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_navMenu_MisTarjetas_Inicio"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="btnHome"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/iv_navMenu_MisTarjetas_Perfil"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="btnMiPerfil"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/iv_navMenu_MisTarjetas_Categorias"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/busqueda" />
    </LinearLayout>

</LinearLayout>