<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity"
    android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/avenir_roman"
                android:text="Explora nuestro catÃ¡logo"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="70dp"
            android:layout_height="5dp"
            android:background="@color/orange"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:layout_height="match_parent">

            <GridView
                android:id="@+id/id_grid"

                android:layout_marginVertical="50dp"
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:verticalSpacing="15dp"
                android:numColumns="1" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_navMenu_Principal_Inicio"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="25dp"
                    app:srcCompat="@drawable/home" />

                <ImageView
                    android:id="@+id/iv_navMenu_Principal_Perfil"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:onClick="btnMiPerfil"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="25dp"
                    app:srcCompat="@drawable/user" />

                <ImageView
                    android:id="@+id/iv_navMenu_Principal_mas"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:onClick="btnAgregarProducto"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="25dp"
                    app:srcCompat="@drawable/mas" />

                <ImageView
                    android:id="@+id/iv_navMenu_Principal_Categorias"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="25dp"
                    app:srcCompat="@drawable/busqueda" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>