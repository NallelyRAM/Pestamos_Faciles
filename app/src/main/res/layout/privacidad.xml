<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_privacidad"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacidad"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginRight="65dp"
        android:text="Al utilizar los servicios de prestodo,
        \nusted está dando consentimiento a
        \nlas prácticas descritas en este aviso
        \nde privacidad.
        \n
        \nSi tiene preguntas sobre cómo recabamos y usamos sus datos personales o sobre este aviso de privacidad, por favor póngase en contacto con nosotros.\n\nNuestros datos de contacto son:"
        android:layout_marginLeft="65dp"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="186dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_textview"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_privacidadUbicacion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text=" Ubicación"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/purple_500" />

        <TextView
            android:id="@+id/tv_privacidadEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text=" Correo Electrónico"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/purple_500" />

        <TextView
            android:id="@+id/tv_privacidadTelefono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="Teléfono"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>