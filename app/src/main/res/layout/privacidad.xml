<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.PrivacidadActivity"
    android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_privacidad"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacidad"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_marginRight="65dp"
        android:text="Al utilizar los servicios de prestodo, usted est치 dando consentimiento a las pr치cticas descritas en este aviso de privacidad.\n
        \nSi tiene preguntas sobre c칩mo recabamos y usamos sus datos personales o sobre este aviso de privacidad, por favor p칩ngase en contacto con nosotros.\n\nNuestros datos de contacto son:"
        android:layout_marginLeft="65dp"
        android:gravity="center"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="186dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_textview"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_privacidadUbicacion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="  ITSON Campus Nainari"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange" />

        <TextView
            android:id="@+id/tv_privacidadEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="  atencionalcliente@prestodo.com"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/orange" />

        <TextView
            android:id="@+id/tv_privacidadTelefono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="   644 259 6559"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_navMenu_Privacidad_Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btnHome"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/iv_navMenu_Privacidad_Perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="btnMiPerfil"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/iv_navMenu_Privacidad_mas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/mas" />

        <ImageView
            android:id="@+id/iv_navMenu_Privacidad_Categorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/busqueda" />
    </LinearLayout>

</LinearLayout>