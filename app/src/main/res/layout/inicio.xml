<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/LOGO2_ICN" />

    <TextView
        android:id="@+id/tv_inicioUsuario"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:hint="  Usuario"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:background="@drawable/round_textview"/>

    <EditText
        android:id="@+id/tv_inicioPassword"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="  Contraseña"
        android:inputType="textPassword"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:background="@drawable/round_textview"/>

    <TextView
        android:id="@+id/tv_olvidastePassword"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:hint="¿Olvidaste la contraseñia?"
        android:textSize="18sp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/tv_recordarUsuario"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:hint="Recordar usuario"
        android:textSize="18sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btn_iniciarSesion"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:text="Iniciar Sesión" />

    <Button
        android:id="@+id/btn_inicioRegistrar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:text="Registrar" />

</LinearLayout>