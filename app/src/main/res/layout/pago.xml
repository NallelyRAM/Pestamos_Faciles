<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PagoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="2dp"
        android:background="@color/purple_500"/>

    <TextView
        android:id="@+id/tv_tarjeta"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:text="NÃšMERO DE TARJETA"/>

    <TextView
        android:id="@+id/tv_numeroTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:text="0000 0000 0000 0000"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="2dp"
        android:background="@color/purple_500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vencimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="FECHA DE VENCIMIENTO"/>

            <TextView
                android:id="@+id/tv_fechaDeVencimiento"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="00 00"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_marginTop="1dp"
            android:layout_height="105dp"
            android:layout_marginLeft="10dp"
            android:background="@color/purple_500"/>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="90sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_CCV"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="CVV"/>

            <TextView
                android:id="@+id/tv_numeroCCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="000"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/purple_500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_myEmisor"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Emisor"/>

            <TextView
                android:id="@+id/tv_emisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="asdada sdadada asdadsa asdada dsasdasd"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_marginTop="1dp"
            android:layout_height="165dp"
            android:layout_marginLeft="10dp"
            android:background="@color/purple_500"/>





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:background="@color/purple_500"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Subtotal"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="Subtotal"/>

            <TextView
                android:id="@+id/tv_IVA"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="IVA"/>

            <TextView
                android:id="@+id/tv_Total"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="Total"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130sp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cantidadSubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="00 00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_cantidadIVA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="00 00"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_cantidadTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="00 00"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_pagar"
        android:layout_marginTop="15dp"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:text="Pagar"
        android:textSize="18sp"/>


</LinearLayout>