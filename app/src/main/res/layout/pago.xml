<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Actividades.PagoActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_atras" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/avenir_roman"
            android:text="Pagar"
            android:textAlignment="textStart"
            android:textSize="25sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:background="@color/orange"/>

    <TextView
        android:id="@+id/tv_tarjeta"
        android:layout_width="330dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:text="@string/numero_tarjeta"
        android:textAllCaps="true"
        android:fontFamily="@font/avenir_roman"
        android:textColor="@color/gray"/>

    <TextView
        android:id="@+id/tv_numeroTarjeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:text="0000 0000 0000 0000"
        android:fontFamily="@font/avenir_roman"
        android:textColor="@color/gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="2dp"
        android:background="@color/orange"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_vencimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="@string/fecha_venc"
                android:textAllCaps="true"
                android:fontFamily="@font/avenir_roman"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tv_fechaDeVencimiento"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="00 00"
                android:textColor="@color/gray"
                android:fontFamily="@font/avenir_roman"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_marginTop="1dp"
            android:layout_height="105dp"
            android:layout_marginLeft="10dp"
            android:background="@color/orange"/>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="90sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_CCV"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="@string/cvv"
                android:textAllCaps="true"
                android:fontFamily="@font/avenir_roman"
                android:textColor="@color/gray"/>

            <TextView
                android:id="@+id/tv_numeroCCV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:text="000"
                android:fontFamily="@font/avenir_roman"
                android:textColor="@color/gray"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/orange"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_myEmisor"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/emisor"
                android:textAllCaps="true"
                android:textColor="@color/gray"
                android:fontFamily="@font/avenir_roman"/>

            <TextView
                android:id="@+id/tv_emisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:fontFamily="@font/avenir_roman"
                android:textColor="@color/gray"
                android:text="asdada sdadada asdadsa asdada dsasdasd"/>

            <TextView
                android:id="@+id/tv_nombrePropietario"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Propietario"
                android:textAllCaps="true"
                android:textColor="@color/gray"
                android:fontFamily="@font/avenir_roman"/>

            <TextView
                android:id="@+id/tv_nombreCompletoPropietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:fontFamily="@font/avenir_roman"
                android:textColor="@color/gray"
                android:text="asdada sdadada asdadsa asdada dsasdasd"/>

        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_marginTop="1dp"
            android:layout_height="165dp"
            android:layout_marginLeft="10dp"
            android:background="@color/orange"/>





    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="2dp"
        android:layout_marginBottom="10dp"
        android:background="@color/orange"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="111dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Subtotal"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avenir_roman"
                android:text="@string/subtotal"
                android:textAllCaps="true"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_IVA"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avenir_roman"
                android:text="@string/iva"
                android:textAllCaps="true"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_Total"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avenir_roman"
                android:text="@string/total"
                android:textAllCaps="true"
                android:textColor="@color/gray"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="111dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_cantidadSubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avenir_roman"
                android:text="00 00"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_cantidadIVA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avenir_roman"
                android:text="00 00"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_cantidadTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/avenir_roman"
                android:text="00 00"
                android:textColor="@color/gray"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_pagar"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:text="Pagar"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/avenir_roman"
        android:textAllCaps="false"/>


</LinearLayout>