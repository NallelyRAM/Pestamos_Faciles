<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/round_textview">

        <TextView
            android:id="@+id/tv_detalle_terminada"
            android:layout_width="300dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Terminada en"/>

        <TextView
            android:id="@+id/tv_detalle_terminaEn"
            android:layout_width="300dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="xxxx 0000"/>

        <TextView
            android:id="@+id/tv_detalle_vencimiento"
            android:layout_width="300dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Vencimiento"/>

        <TextView
            android:id="@+id/tv_detalle_venceEn"
            android:layout_width="300dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_height="30dp"
            android:textSize="18sp"
            android:text="08 / 25"/>

    </LinearLayout>

</LinearLayout>