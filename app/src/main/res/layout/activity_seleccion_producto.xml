<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@android:style/Theme.NoTitleBar"
    tools:context=".SeleccionProducto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/btn_atras" />

        <TextView
            android:layout_width="310dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/avenir_roman"
            android:text="@string/descripcion"
            android:textAlignment="textStart"
            android:textSize="25sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_producto_seleccionado"
        android:layout_width="142dp"
        android:layout_height="191dp"
        android:layout_gravity="center"
        android:src="@drawable/logo2_icn"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:gravity="left"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_navMenu_cuenta_Inicio"
            android:layout_width="10dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dinero" />

        <TextView
            android:id="@+id/tv_precio_seleccionProducto"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="0.0"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="@font/avenir_black"/>




    </LinearLayout>



    <TextView
        android:id="@+id/tv_nombreProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:text="Nombre"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:textSize="30sp"
        android:fontFamily="@font/avenir_black"
        android:textColor="@color/gray"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tv_descripcion_seleccion_producto"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="50dp"
        android:text="DescripciÃ³n del prducto"
        android:textSize="18sp"
        android:fontFamily="@font/avenir_black"
        android:textColor="@color/gray"/>



    <Button
        android:id="@+id/btn_detalles"
        android:layout_width="250dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:text="@string/detalles"
        android:fontFamily="@font/avenir_roman"
        android:textColor="@color/white"
        android:textSize="20dp"/>

</LinearLayout>