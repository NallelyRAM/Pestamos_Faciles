<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_perderContrasenia"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:hint="¿Perdiste tu contraseña?"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:hint="¡No te preocupes! Escribe tu usuario para recuperarla"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_confirmarContrasenia"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:hint="  Usuaio"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:background="@drawable/round_textview"/>

    <Button
        android:id="@+id/btn_restaurarContrasenia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_button"
        android:text="Recuperar" />
</LinearLayout>