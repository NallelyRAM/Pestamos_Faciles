<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="5sp"
            android:layout_height="30dp"
            android:layout_weight="1"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:text="Mis tarjetas"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_perfilNombre"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="Manuel"/>

    <TextView
        android:id="@+id/tv_perfilProductosPrestados"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="Productos prestados"/>

    <ListView
        android:id="@+id/listView_productosPrestados"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tv_historialPrestamos"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:text="Historial de los prÃ©stamos"/>

    <ListView
        android:id="@+id/listView_historialPrestamos"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginTop="15dp"/>

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/purple_500"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/iv_navMenu_perfil_Inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/iv_navMenu_perfil_Perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/iv_navMenu_perfil_Categorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/busqueda" />

    </LinearLayout>

</LinearLayout>