<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_seguridad"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seguridad"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_textview">


        <TextView
            android:id="@+id/tv_seguridadUsuario"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text=" Usuario" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/purple_500"/>

        <TextView
            android:id="@+id/tv_seguridadContrasenia"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text=" Contraseña" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/purple_500"/>

        <TextView
            android:id="@+id/tv_seguridadTelefono"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text="Teléfono" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/purple_500"/>

        <TextView
            android:id="@+id/tv_seguridadEmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:text=" Correo Electrónico" />



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="Para mayor seguridad de la cuenta, agrega tu número de teléfono. Si hay un inicio de sesión inusual, podemos enviarte un código y verificar si eres tu."
        android:layout_marginLeft="65dp"
        android:textAlignment="center"
        android:layout_marginRight="65dp"
        android:textSize="18sp"
        android:textStyle="italic"
        />



    <Button
        android:id="@+id/btn_inicioAcepto"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:background="@drawable/round_button"
        android:text="Acepto" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/user" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/busqueda" />
    </LinearLayout>


</LinearLayout>