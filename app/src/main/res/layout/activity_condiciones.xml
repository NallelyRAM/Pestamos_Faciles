<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Actividades.CondicionesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_productoCondiciones"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            app:srcCompat="@drawable/logo2_icn" />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_condicionesNombreProducto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Nombre del producto"
                android:textSize="20sp"
                android:fontFamily="@font/avenir_roman"

                />

            <TextView
                android:id="@+id/tv_condicionesDescripcion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="descripciÃ³n"
                android:fontFamily="@font/avenir_roman"
                />

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="30sp"
        android:fontFamily="@font/avenir_roman"
        android:gravity="center"
        android:text="@string/texto1"
        android:textColor="@color/gray"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="43dp"
        android:textSize="17dp"
        android:gravity="center"
        android:text="@string/texto2"
        android:textColor="@color/gray"
        android:layout_marginBottom="36dp"

        />

    <Button
        android:id="@+id/btn_condicionesSiguiente"
        android:layout_marginTop="50dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:text="@string/siguiente"
        android:textSize="20sp"
        android:fontFamily="@font/avenir_roman"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"/>



</LinearLayout>